# Core settings
SECRET_KEY=your-secret-key-should-be-at-least-32-characters
DEBUG=true
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8080

# CORS settings
CORS_ORIGINS=["*"]

# Default providers
DEFAULT_LLM_PROVIDER=openai
DEFAULT_VECTOR_DB=chroma
SHARED_VECTOR_DB=true

# OpenAI settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Ollama settings (for local LLMs)
OLLAMA_API_BASE=http://ollama:11434/api
OLLAMA_DEFAULT_MODEL=llama3

# ChromaDB settings
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=hello_pulse

# Qdrant settings
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=hello_pulse

# Web search settings
SERPAPI_API_KEY=your-serpapi-api-key