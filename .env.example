# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=supersecret
POSTGRES_DB_NAME=hellopulsedb
POSTGRES_HOST=db
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@hellopulse.fr
PGADMIN_PASSWORD=supersecret

# Storage Configuration
# Choose one of: minio, s3, azure, gcs
STORAGE_PROVIDER=minio
STORAGE_DEFAULT_BUCKET=hello-pulse

# MinIO Configuration (when STORAGE_PROVIDER=minio)
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=supersecret
MINIO_USE_SSL=false

# AWS S3 Configuration (when STORAGE_PROVIDER=s3)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Azure Blob Storage Configuration (when STORAGE_PROVIDER=azure)
# AZURE_ACCOUNT_NAME=your-storage-account
# AZURE_ACCOUNT_KEY=your-storage-account-key

# Google Cloud Storage Configuration (when STORAGE_PROVIDER=gcs)
# GCS_PROJECT_ID=your-gcp-project-id
# GCS_CREDENTIALS_FILE=/path/to/credentials.json

# Application Configuration
PORT=8000
MAX_GOROUTINES=5
JWT_SECRET=your-super-secret-jwt-key